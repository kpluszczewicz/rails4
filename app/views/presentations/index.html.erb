<h2><%= t('presentations.search.head') %></h2>
<h3><%= t('presentations.search.tip') %></h3>

<%= form_tag presentations_path, :method => :get, :remote => true do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag t('presentations.search.button'), :name => nil %>
  </p>
<% end %>

  <div id="presentations">
    <%= render 'presentation' %>
  </div>
<% tag_cloud(@tags, %w(css1 css2 css3 css4)) do |tag, css_class| %>
  <%= link_to tag.name, tags_presentation_path(:name=>tag.name), :class => css_class %>
<% end %>
